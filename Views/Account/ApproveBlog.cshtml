@model List<GroupBlog.Models.Blog>

@{
    ViewBag.Title = "ApproveBlog";
}

<h2>Pending Blog</h2>
<hr />
@if (Model.Any())
{
    foreach (var m in Model)
    {
        if (!m.Approved)
        {
            <div class="card">
                <h5 class="card-header">@m.Title</h5>
                <div class="card-body">
                    <p class="card-text">@Html.Raw(m.Body)</p>
                    @using (Html.BeginForm("ApproveBlog", "Account", new { id = m.Id }, FormMethod.Post))
                    {
                        <button class="btn btn-info" type="submit">Approve</button>
                    }
                    @using (Html.BeginForm("DeleteBlog", "Account", new { id = m.Id }, FormMethod.Post))
                    {
                        <button class="btn btn-secondary" type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
                    }
                </div>
            </div>
            <br />
        }
    }
}