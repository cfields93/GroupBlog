@model List<GroupBlog.Models.Blog>

@{
    ViewBag.Title = "Home Page";
}

<h1>Blog Posts</h1>
@if(Model.Any())
{
    for(int i = 0; i < Model.Count(); i++)
    {
        <div class="card">
            <h5 class="card-header">@Model[i].Title</h5>
            <div class="card-body">
                <p class="card-text">@Model[i].Body</p>
            </div>
        </div>
        <br />
    }
}